<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <stroke
                android:width="2dp"
                android:color="#08FFFFFF" />

            <size
                android:width="64dp"
                android:height="64dp" />

            <gradient
                android:endColor="#383636"
                android:startColor="#2E2C2C"
                android:type="linear" />

            <size
                android:width="64dp"
                android:height="64dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_rubles"
        android:width="25dp"
        android:height="32dp"
        android:gravity="center"
        />
</layer-list>